{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch Package",
          "type": "go",
          "request": "launch",
          "mode": "auto",
          "program": "${workspaceFolder}/cmd/server/main.go",
          "env": {
              "ENV": "local"
          },
          "args": []
      },
      {
          "name": "Debug Tests",
          "type": "go",
          "request": "launch",
          "mode": "test",
          "program": "${fileDirname}",
          "env": {
              "ENV": "local"
          }
      },
      {
          "name": "Attach to Process",
          "type": "go",
          "request": "attach",
          "mode": "local",
          "processId": 0
      }
  ]
}